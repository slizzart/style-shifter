{
  "name": "@slizzart/style-shifter",
  "version": "1.0.0",
  "description": "Dynamic CSS theming system with expression-based style overrides",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "theme",
    "css",
    "theming",
    "dynamic-styles",
    "css-in-js",
    "style-overrides",
    "runtime-theming",
    "stylesheet",
    "typescript",
    "browser",
    "expressions"
  ],
  "author": "Harry Bournazos",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/slizzart/style-shifter.git"
  },
  "bugs": {
    "url": "https://github.com/slizzart/style-shifter/issues"
  },
  "homepage": "https://github.com/slizzart/style-shifter#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@vitest/ui": "^1.0.4",
    "@vitest/coverage-v8": "^1.0.4",
    "happy-dom": "^12.10.3",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
